<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title> 
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">Back to Home</a>
        <h1 class="text-3xl tracking-tighter mt-5 mb-3">All Users</h1>
        <div class="Users flex gap-3 flex-wrap">
            <% if(users.length > 0){ %>
                <% users.forEach(function(user){ %>
                    <div class="user p-4 w-72 bg-zinc-800 rounded-lg">
                        <div class="bg-zinc-700 w-full h-52 rounded-lg overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="User Image">
                        </div>
                        <h3 class="tracking-tighter mt-3 text-xl"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex gap-3 mt-3">
                            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-red-500" href="/Delete/<%= user._id %>">Delete User</a>
                        </div>
                        </div>
                  <% })%>        
           <% } else{ %>
                <h3 class="text-zinc-500">No Users yet</h3>
           <% } %>
          

           

        </div>
    </div>
</body>
</html>
